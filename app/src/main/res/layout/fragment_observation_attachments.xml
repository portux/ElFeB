<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/fragment_observation_attachments"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.ObservationDetailsFragment">

  <TextView
    android:id="@+id/text_observation_attachments_images"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:text="@string/observation_images"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_observation_images"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:scrollbars="horizontal"
    app:layout_constraintBottom_toTopOf="@+id/guide_attachments_split"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_observation_attachments_images"
    tools:listitem="@layout/observation_image"/>
  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guide_attachments_split"
    android:layout_width="wrap_content"
    android:layout_height="1dp"
    android:orientation="horizontal"
    app:layout_constraintGuide_end="170dp"/>
  <TextView
    android:id="@+id/text_observation_attachments_audio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:text="@string/observation_audio"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guide_attachments_split"/>
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_observation_audio"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:scrollbars="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/text_observation_attachments_audio"
    tools:listitem="@layout/observation_audio"/>
  <View
    android:id="@+id/divider_attachments"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@color/secondaryDarkColor"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/recycler_observation_images"/>

</androidx.constraintlayout.widget.ConstraintLayout>
